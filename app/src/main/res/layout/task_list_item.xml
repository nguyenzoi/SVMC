<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_margin="2dp">

    <CheckBox
        android:id="@+id/checkbox_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkbox_completed"
        android:layout_alignBottom="@+id/checkbox_completed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/image_priority"
        android:layout_toEndOf="@+id/checkbox_completed"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Text Name" />

    <ImageView
        android:id="@+id/image_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkbox_completed"
        android:layout_alignBottom="@+id/checkbox_completed"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_priority_high_24" />

</RelativeLayout>